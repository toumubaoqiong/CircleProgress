<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.vince.circleprogress"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.vince.circleprogress.controls.RoundProgress
        android:id="@+id/roundProgress"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_centerInParent="true"
        app:backgroundColor="#ff000000"
        app:foregroundColor="#fff00000" 
        app:maximum="100"
        app:d_value="10sp"/>
    
    <Button 
        android:id="@+id/Button_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/roundProgress"
        android:layout_centerHorizontal="true"
        android:text="Again"
        />

</RelativeLayout>